<Window x:Class="Type2.Presentacion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Type2"
        mc:Ignorable="d"
        Title="Presentacion" Height="450" Width="800">
    <Grid>
        <ScrollViewer Margin="0,0,20,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalScrollBarVisibility="Auto">
            <StackPanel x:Name="mainPanel" Margin="20,20,20,20" Grid.Column="0"  Orientation="Vertical"  >
                <local:RedditBox/>
            </StackPanel>
        </ScrollViewer>

    </Grid>
</Window>
